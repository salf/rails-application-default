
<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, :html => { class: 'form-signin restore'}) do |f| %>
  <%= f.error_notification %>
  <h2 class="form-signin-heading">Forgot your password?</h2>

  <%= f.input :email, :required => true, :autofocus => true, placeholder: "Email address", label: false, input_html: {class: 'form-control'}, wrapper: false %>
  <br/>

  <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block' %>
  <div class='links'>
    <%= render "users/shared/links" %>
  </div>
<% end %>

