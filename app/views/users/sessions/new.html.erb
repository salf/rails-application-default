
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-signin'}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.input :email, required: true, autofocus: true, placeholder: "Email address", label: false, input_html: {class: 'form-control'}, wrapper: false %>
  <%= f.input :password, required: true, placeholder: "Password", label: false, input_html: {class: 'form-control'}, wrapper: false %>
  <%= f.input :remember_me, as: :boolean, input_html: {class: 'remember_me'} if devise_mapping.rememberable? %>

  <%= f.button :submit, "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
  <div class='links'>
    <%= render "users/shared/links" %>
  </div>
<% end %>

